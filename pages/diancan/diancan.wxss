page {
  background: gainsboro;
  height: 100%;
}

/* 分类相关样式 */
.main {
  width: 100%;
  height: 100%;
}

.left {
  /* 左侧栏目 */
  font-size: 32rpx;
  overflow: auto;
  width: 25%;
  height: 100vh;
  float: left;
  box-sizing: border-box;
  height: 100vh;
  /* background: white; */
}



.left-tab {
  height: 80rpx;
  line-height: 80rpx;
  /* background: #fff; */
  text-align: center;
  position: relative;
}

/* 被选中 */
.active {
  color: #7dcbff;
  background-color: white;
}


/* 右侧栏目 */
.right {
  height: 100vh;
  width: 75%;
  float: right;
  /* padding: 0 2%; */
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 80rpx;
}

.right .title {
  padding-left: 20rpx;
  font-size: 33rpx;
  height: 72rpx;
  line-height: 80rpx;
  color: gray;
  /* background-color: wheat; */
  background-color: white;
}


/*菜品列表  */
.caipin_item {
  display: flex;
  padding: 8rpx 0rpx;
  align-items: center;
  background-color: #ffffff
}

.cai_img {
  border-radius: 14rpx;
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-right: 30rpx;
}

.cai_root2 {
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  min-width: 0
}

.cai_title {
  font-weight: 400;
  font-size: 33rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}

.cai_sell {
  margin-top: 6rpx;
  font-size: 30rpx;
  color: gray;
}

/*加减器*/

.stepper {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 10rpx;
}

/*价格与数量加减器*/

.price-stepper {
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/

.cai_price {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 30rpx;
  color: #436f8b;
}

/*人民币符号*/

.cai_price:before {
  content: "￥";
  font-size: 30rpx;
}



.jiajian {
  margin-top: 6rpx;
  width: 40rpx;
  height: 40rpx;
}

.value_num {
  width: 50rpx;
  text-align: center;
}

/*数量*/

.value {
  font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: bold;
}

/*底部区域  */

.bottom_box {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  border-top: 10rpx #E0F2F7 solid;
  background-color: #fef4d1;
}

.shop_cartBox {
  width: 110rpx;
  height: 110rpx;
  background-color: #124564;
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
  left: 40rpx;
}

.shopCart_img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 24rpx;
  left: 24rpx;
}

.all_money {
  position: absolute;
  width: 50%;
  height: 80rpx;
  top: 0;
  left: 25%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

.choose_ok {
  position: absolute;
  width: 25%;
  height: 80rpx;
  top: 0;
  right: 0;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  background-color: #124564;
  border-left: solid 10rpx #E0F2F7;
}

/*弹窗遮罩层  */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 666;
}

/*购物车弹窗  */

.cart_popup {
  border-top-left-radius: 30rpx 15rpx;
  border-top-right-radius: 30rpx 15rpx;
  border-top: 15rpx solid #124564;
  width: 100%;
  height: 285px;
  background: #fff;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: -300px;
  overflow: hidden;
}

.shopcart_title {
  display: flex;
  width: 100%;
  height: 35px;
  line-height: 28px;
  text-align: center;
  position: fixed;
  flex-direction: column;
  background-color: #124564;
  color: #fff;
}

.scroll_cart {
  height: 250px;
  margin-top: 37px;
}

/*关闭按钮  */
.shopcart_close {
  vertical-align: middle;
  position: absolute;
  left: 30rpx;
  font-size: medium;
}

/*购物车  */
.shopcart_text {
  color: white;
  font-size-adjust: inherit;
  font-size: medium;
}

/*清空购物车  */
.shopcart_deleteAll {
  vertical-align: middle;
  position: absolute;
  right: 30rpx;
  font-size: medium;
}

/*购物车列表  */
.cart_cells {
  width: 100%;
  height: 98rpx;
  position: relative;
  border-bottom: 2rpx #dedede solid;
}

.cells_name {
  width: 40%;
  height: 50%;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 28rpx;
  margin-left: 40rpx;
  padding-top: 10rpx;
}

.cells_price {
  width: 60%;
  height: 50%;
  position: absolute;
  top: 50rpx;
  left: 0;
  margin-left: 40rpx;
  font-size: 25rpx;
  padding-bottom: 10rpx;
  color: #124564;
}

.price-box {
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 20%;
  position: absolute;
  text-align: center;
  left: 60%;
  top: 20rpx;
}

/*删除购物车某项  */
.shopcart_delete {
  position: absolute;
  right: 40rpx;
  top: 32rpx;
}

.img1 {
  text-align: center;
}

.tianChong {
  background-color: white;
  height: 100vh;
  width: 100%;
}

.foodlistFinish {
  text-align: center;
  color: gray;
  font-size: 25rpx;
  background-color: white;
  height: 70rpx;
  width: 100%;
}